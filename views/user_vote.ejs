<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Vote Page</title>

    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles/voter.css" type="text/css" />
  </head>
  <body>
    <%- include("./partials/_header") %>
    <main>
      <form action="/polls/<%= poll.poll_id %>/vote" method="POST">
        <div class="container text-center border p-5 mt-3 w-50 shadow">
          <h1><%= poll.title %>?</h1>
          <p><%= poll.description %></p>
          <div id="demo" class="row w-50 mx-auto mt-5 flex-column">
            <div id="poll-options" class="list-group col p-0">
              <% let count = 1; for (let option in poll.data) { %>
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><%= count %></span>
                  <input name="<%= poll["option_ids"][count-1] %>" type="text"
                  value="<%= poll["option_ids"][count-1]%>" style="display:
                  none" />
                </div>
                <div class="form-control list-group-item nested-1 sortOption">
                  <%= option%>
                </div>
              </div>
              <% count++ } %>
            </div>
            <div class="d-flex justify-content-end">
              <button class="mt-2 btn btn-outline-secondary">Vote</button>
            </div>
          </div>
          <div class="mt-3 row justify-content-end">
            <p>Created By: <%= poll.creator %></p>
          </div>
        </div>
      </form>
    </main>
    <script src="https://unpkg.com/sortablejs-make/Sortable.min.js"></script>
    <script src="https://code.jquery.com/jquery-2.2.4.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-sortablejs@latest/jquery-sortable.js"></script>
    <script type="text/javascript" src="/scripts/dragAndDrop.js"></script>
  </body>
</html>
