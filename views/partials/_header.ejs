<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <img src="images/logo3.png" width="30" height="30" alt="" />
    <a class="navbar-brand pl-2" href="/">TBD Inc.</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <% if (email) { %>
      <div class="navbar-nav ml-auto">
        <li class="nav-item">
          <span class="nav-link text-white"><%= email %></span>
        </li>
        <li class="nav-item">
          <a class="nav-link my-sm-0 text-white" href="/polls/new"
            >Create Poll</a
          >
        </li>
      </div>
      <form class="form-inline my-2 my-lg-0" method="POST" action="/logout">
        <button
          class="nav-item nav-link btn btn-link my-sm-0 text-white"
          type="submit"
        >
          Logout
        </button>
      </form>
      <% } else { %>
      <div class="ml-auto">
        <form method="POST" action="/login" class="form-inline my-2 my-lg-0">
          <input
            class="form-control mr-sm-2"
            name="email"
            type="email"
            placeholder="Email Address"
            aria-label="Email Address"
          />
          <button
            class="nav-item nav-link btn btn-link my-sm-0 text-white"
            type="submit"
          >
            Login
          </button>
        </form>
      </div>
      <% } %>
    </div>
  </nav>
</header>
